<section class="pt-small pt-md-medium pb-medium bg-light-1 radius-lg mt-minus-small" id="realizacje">
    <div class="container">
        <h2 class="mt-0 mb-5">
            <span class="underline">Wybrane </span> realizacje
        </h2>
    <div class="row">
    {% for post in collections.works.slice(0, 12) %}
        <div class="col-md-6 mb-4">
           <div class="work-card radius-sm">
                <a href="{{ post.data.link }}" title="{{ post.data.title }}" target="_blank">
                {% workImage "src/" + post.data.thumbnail, post.data.title %}
                <div class="work-card-content p-4">
                    <p class="subheading my-0 bold color-accent-1"> 
                        {{ post.data.client }}
                    </p>
                    <h3 class="mt-2 color-light-1">
                        {{ post.data.title }}
                    </h3>
                </div>
                </a>
           </div> 
        </div>
    {% endfor %} 
    </div>
    <a href="/realizacje/" class="pm-button mt-4">
        <span>
            Wszystkie realizacje
        </span>
        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 25 25" fill="none" preserveAspectRatio="xMidYMid meet" aria-hidden="true" role="img">
            <path d="M11.793 18.2273L13.207 19.6413L19.914 12.9343L13.207 6.22729L11.793 7.64129L16.086 11.9343H6.5V13.9343H16.086L11.793 18.2273Z" fill="currentColor"></path>
        </svg>
    </a>
    </div>
</section>


<style>
    .work-card {
        position: relative
    }
    .work-card::before {
        position: absolute;
        content: "";
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgb(13,13,13);
        background: linear-gradient(180deg, rgba(13,13,13,0) 0%, rgba(14,14,14,1) 100%); 
        transition: .4s ease-in-out;
        pointer-events: none;
        opacity: 0.75;
        z-index: 1;
    }
    .work-card-content {
        position: absolute;
        bottom: -1em;
        left: .3em;
        transition: .4s ease-in-out;
        opacity: 1;
        z-index: 3;
    }
    .work-card picture img {
        transition: .4s ease-in-out;
    }

    @media(min-width:767px) {
    .work-card::before {
        opacity: .05
    }
    .work-card-content {
        left: 1.8em;
        opacity: 0;
    }
    .work-card:hover::before {
        opacity: .8;
    }
    .work-card:hover picture img {
        transform: scale(1.1);
    }
    .work-card:hover .work-card-content {
        bottom: 0em;
        opacity: 1;
    }
    }
</style>